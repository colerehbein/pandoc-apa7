{
    "version": "0.1.1",
    "command": "pandoc",
    "isShellCommand": true,
    "args": [ "${file}", "--dpi", "300", "--parse-raw",
        "--standalone", "--normalize", "--wrap", "none", "--filter",
        "pandoc-fignos", "--filter", "pandoc-tablenos", "--filter",
        "pandoc-citeproc", "--data-dir", "${workspaceRoot}/pandoc", "--csl",
        "${workspaceRoot}/pandoc/apa.csl"
    ],
    "showOutput": "always",
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
    {
        "taskName": "Pandoc-APA PDF",
        "isBuildCommand": true,
        "args": [ "-f", "markdown", "-t", "latex", "-o",
            "${fileDirname}/${fileBasenameNoExtension}.pdf", "--template",
            "${workspaceRoot}/pandoc/apa_template.tex", "--smart"
        ]
    },
    {
        "taskName": "Pandoc-APA DOCX",
        "args": [ "-f", "markdown", "-t", "docx", "-o",
            "${fileDirname}/${fileBasenameNoExtension}.docx", "--reference-docx",
            "${workspaceRoot}/pandoc/apa.docx", "--smart"
        ]
    },
    {
        "taskName": "Pandoc-APA TEX",
        "args": [ "-f", "markdown", "-t", "latex", "-o",
            "${fileDirname}/${fileBasenameNoExtension}.tex", "--template",
            "${workspaceRoot}/pandoc/apa_template.tex",
            "--biblatex"
        ]
    },
    {
        "taskName": "Pandoc-APA Word2MD",
        "args": [ "-f", "docx", "-t", "markdown", "-o",
            "${fileDirname}/${fileBasenameNoExtension}_copy.md", "--track-changes",
            "accept"
        ]
    } ]
}
